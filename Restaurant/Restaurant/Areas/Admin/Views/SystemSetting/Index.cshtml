@model IEnumerable<RESTAURANT.Models.SystemSetting>

@{
    ViewData["Title"] = "Index";
}

<div class="pagetitle">
    <h1>System Setting</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">System Setting</li>

        </ol>
    </nav>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<section class="section">
      <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
             <div class="dataTable-top"><div class="dataTable-dropdown"><label><select class="dataTable-selector"><option value="5">5</option><option value="10" selected="">10</option><option value="15">15</option><option value="20">20</option><option value="25">25</option></select> entries per page</label></div><div class="dataTable-search"><input class="dataTable-input" placeholder="Search..." type="text"></div></div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SystemSettingLogoImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSettingLogoImageUrl2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSettingCopyright)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSettingWelcomeNoteTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSettingWelcomeNoteBreef)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.SystemSettingWelcomeNoteUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSettingWelcomeNoteImageUrl)
            </th>
           
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                 
                <img  src="~/Images/@item.SystemSettingLogoImageUrl" style="max-width:30px;" />
            </td>
            <td>
                <img  src="~/Images/@item.SystemSettingLogoImageUrl2" style="max-width:30px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemSettingCopyright)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemSettingWelcomeNoteTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SystemSettingWelcomeNoteBreef)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.SystemSettingWelcomeNoteUrl)
            </td>
            <td>
                <img  src="~/Images/@item.SystemSettingWelcomeNoteImageUrl" style="max-width:30px;" />
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.SystemSettingId"><span class="glyphicon">&#x270f;</span></a> |
                <a  asp-route-ActiveId="@item.SystemSettingId">
                 @if ( item.IsActive==true)
                {
                   
                     <img src="~/images.png"  style="max-width:30px;" />
                }
                else if( item.IsActive==false)
                {
                     <img src="~/status-icon-png-29.jpg"  style="max-width:30px;" />
                     
                } 
                </a> |                
                <a  class="btndelete" href="#" data-toggle="modal" data-target="#exampleModal" data-path="@Url.ActionLink("Index","SystemSetting",new{DeleteId=@item.SystemSettingId})"> <img src="~/images(1).png"  style="max-width:30px;" /> </a> 
            </td>
        </tr>
}
    </tbody>
</table>
</div>
          </div>

        </div>
      </div>
    </section>

    