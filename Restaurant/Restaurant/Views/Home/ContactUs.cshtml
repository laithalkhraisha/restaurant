        <div class="contact-area pt-100">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="contact-message-wrapper">
                            <h4 class="contact-title mb-25">Leave Us a Message</h4>
                            <div class="contact-message">
                                <form id="contact-form" asp-action="SendMsg">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="contact-form-style mb-20">
                                                <input asp-for="TransactionContactUs.TransactionContactUsFullName"  placeholder="Full Name" >
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="contact-form-style mb-20">
                                                <input asp-for="TransactionContactUs.TransactionContactUsEmail"  placeholder="Email Address">
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="contact-form-style mb-20">
                                                <input asp-for="TransactionContactUs.TransactionContactUsSubject"  placeholder="Subject" >
                                            </div>
                                        </div>
                                        <div class="col-lg-12">
                                            <div class="contact-form-style">
                                                <textarea asp-for="TransactionContactUs.TransactionContactUsMessage"  placeholder="Message"></textarea>
                                                <button class="submit btn-style" type="submit">SEND MESSAGE</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <p class="form-messege"></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="contact-info-area">
                            <h4 class="contact-title mb-18">Contact Us</h4>
                            <p>Lorem ipsum dolor sit amet, conse ncteturll adipisicing elit, sed do eiusmod </p>
                            <div class="contact-info-wrap">
                                @foreach (var item in Model.ContactUsInformation)
                               {
                                   <div class="single-contact-info mb-40">
                                    <div class="contact-info-icon">
                                        @*<img style="max-width:30px;color:black;background-color:white" src="~/Images/@item.MasterContactUsInformationImageUrl">*@
                                        <i class="@item.Icon"></i>
                                    </div>
                                    <div class="contact-info-content">
                                       <h4>@item.MasterContactUsInformationRedirect</h4>
                                        
                                       <p> @item.MasterContactUsInformationIdesc</p>

                                    </div>
                                </div>
                               }
                                
